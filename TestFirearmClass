const { Firearm } = require('./projet_OOP');
const testFirearm = () => 
{
    let gun = new Firearm('Gun', 25, 50, 6);
    for (let i = 0; i < 7; i++) {
        gun.attack(); 
    }
    console.log(`Needs ammunition: ${gun.needsAmmunition()}`);
    gun.prepareForAttack();
    gun.attack();
    console.log('');
}
testFirearm();